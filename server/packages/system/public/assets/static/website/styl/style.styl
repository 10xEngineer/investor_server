@import 'nib'
basicblue = #3589c3
lightblue = #4daada
basicgray = #808080

global-reset()
a
    text-decoration none

body
    background #f2f2f2
    color #3e3e3e
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    font-weight 200
    font-size 10pt

header
    background basicblue
    .topbar
        clearfix()
        width 90%
        max-width 900px
        margin 0 auto
        height 70px
        a.logo
            display block
            width 112px
            height 70px
            text-indent -9999px
            background-image url(../images/logo.svg)
            background-repeat no-repeat
            background-position center center
            float left
        .links
            float left
            a
                float left
                color #fff
                line-height 70px
                display block
                padding-left 30px
        a.login-link
            background none
            border 2px solid #fff
            float right
            color #fff
            box-sizing border-box
            line-height 40px
            padding 0 20px
            margin-top 12px

footer
    margin 0 auto 50px auto
    width 90%
    max-width 1200px
    .languages-list
        clearfix()
        a
            float right
            margin-left 10px
            text-transform uppercase
            color #777
            font-weight 500
            &.active
                color basicblue
            &:last-of-type
                border-right 1px solid #888
                padding-right 10px
    .links-row
        line-height 4
        clearfix()
        &:before
            color #333
            font-weight 500
            float left
            width 100px

        a
            color #808080
            margin-right 30px
            &.active
                color basicblue
        &.company
            border-bottom 1px solid #aaa
            &:before
                content 'Company'
        &.support
            span
                color #aaa
                float right
            &:before
                content 'Support'

.container
    min-height 200px
    margin 40px auto 0
    width 90%
    max-width 900px
    background #fff
    border 1px solid rgba(0, 0, 0, 0.1)
    padding 40px 0
    .navbar
        clearfix()
        border-top 1px solid rgba(0, 0, 0, 0.1)
        border-bottom @border-top
        padding 20px 0
        margin 0 auto
        width 70%
        a
            float left
            width 33.33%
            display block
            text-align center
            color basicgray
            span
                display block
                &.title
                    font-size 16pt
                    margin 0 0 10px 0
                &.label
                    font-size 10pt
            &.active
                .title
                    color basicblue
    form
        clearfix()
        width 40%
        margin 40px auto 0
        display block
        .step
            display none
            height 350px
            .form-row
                margin 0 0 20px 0
                label
                    display block
                    margin 0 0 5px
                input[type=text]
                input[type=password]
                    box-sizing border-box
                    border none
                    width 100%
                    padding 10px

                    box-shadow inset 0 0 2px rgba(0, 0, 0, 0.4);
                    &.half
                        width 45%
                        margin-right 20px
                        &.right
                            float right
                            margin-right 0
                &.terms
                    input
                    label
                        float left
                        line-height 10pt
                        a
                            color basicblue
                    input
                        margin 0
                    label
                        margin-left 10px
            .app-download-area
                .platform-selector
                    margin 0 auto
                    width 80%

                    border 1px solid basicblue
                    clearfix()
                    a
                        color #d2d2d2
                        font-size 26pt
                        text-align center
                        font-family fontawesome
                        float left
                        display block
                        width 50%
                        line-height 50pt
                        box-sizing border-box
                        transition all 0.2s

                        &.android
                            border-right 1px solid basicblue
                            &:before
                                content '\f17b'
                        &.ios:before
                            content '\f179'
                        &.active
                            background basicblue
                            color #fff
                .qr-code
                    margin 40px auto
                    width 120px
                    height @width
                    background basicgray
                .hint
                    font-size 16pt
                    text-align center

            &.active
                display block
        .continue-link
            background lightblue
            color #fff
            text-align center
            margin 20px auto 0
            background
            padding 10px 40px

            display inline-block
            font-size 16pt
            transition all 0.2s
            &:hover
                background darken(lightblue, 20%)

.center
    text-align center

.home
    background #fff
    header
        .topbar
            width 90%
            max-width 1200px
    .container
        width 90%
        max-width 1200px
        padding 0
        border none
        .banner-container
            position relative
            height 400px
            background url(../images/wood.jpg)
            background-size cover
            margin 0 0 40px 0
            .ipad
                position absolute
                width (500px * 1.5)
                height (200px * 1.5)
                background url(../images/ipad.png)
                background-size cover
                bottom 0
                left 25%
            .copy
                position absolute
                width 40%
                left 10%
                top 40px
                h1
                    font-size 30pt
                    color #fff
                    margin 0 0 20px
                    line-height 1.2
                    font-weight 400
                p
                    font-size 16pt
                    color #fff
                    font-weight 200
                    line-height 1.3
                form
                    margin 20px 0 0 0
                    input
                        padding 10px
                        font-size 10pt
                        width 300px
                        display block
                        margin 0 0 20px 0

                        border none
                    button
                        padding 15px 40px
                        border none

                        background lightblue
                        font-size 12pt
                        font-weight 400
                        color #fff
                        display block
        .main-content
            h1
                text-align center
                font-size 36pt
                font-weight 500
                margin 0 0 50px
                line-height 1.3
            h2
                text-align center
                font-size 15pt
                font-weight 300
                line-height 1.4
            .features-area
                clearfix()
                border-top 1px solid #eee
                border-bottom @border-top
                margin 70px auto
                width 80%
                .feature-box
                    margin 40px 0
                    width 25%
                    text-align center
                    font-weight 300
                    float left
                    box-sizing border-box
                    border-right 1px solid #eee
                    .title
                        font-size 13pt
                    .description
                        font-size 13pt
                        margin 30px
                        line-height 1.5
                        &.temporary
                            margin-top 70px
                    .more-info-link
                        text-align center
                        font-size 14pt
                        color lightblue
                        &:after
                            content '\f105'
                            font-family fontawesome
                            margin-left 10px
                            color #888
                    &:last-of-type
                        border none
                    &.disabled
                        &:before
                        .title
                        .description
                            opacity 0.5
                    &:before
                        content ''
                        display block
                        width 100%
                        height 90px
                        background-repeat no-repeat
                        background-position center center
                        margin-bottom 20px
                    &.pos:before
                        background-image url(../images/feature-icon-pos.svg)
                    &.wallet:before
                        background-image url(../images/feature-icon-wallet.svg)
                    &.merchant:before
                        background-image url(../images/feature-icon-merchant.svg)
                    &.giftcards:before
                        background-image url(../images/feature-icon-giftcards.svg)
            .gradient-area
                clearfix()
                background linear-gradient(top, rgba(black, 0), rgba(black, 0.03))
            .prices-area
                clearfix()
                margin 70px auto
                width 80%
                .price-box
                    margin 40px 0
                    width 33.33%
                    text-align center
                    font-weight 300
                    float left
                    box-sizing border-box
                    .title
                        font-size 40pt
                        font-weight 400
                        margin 0 0 20px 0
                    .subtitle
                        font-size 16pt
                    .terms
                        padding 40px 0
                        margin 40px 0
                        border-top 1px solid basicblue
                        border-bottom @border-top
                        text-align center
                        height 240px
                        .price
                            font-size 18pt
                            span
                                margin 0 5px
                                font-size 40pt
                                font-weight 400

                        .details
                            font-size 20pt
                            margin 20px 0 0 0
                            span
                                line-height 1.8
                                display block
                                &.strong
                                    font-size 26pt

                    .description
                        p
                            font-size 15pt
                            line-height 1.7
                            margin 0 0 20px 0
                    &.disabled
                        .title
                        .subtitle
                        .description
                            opacity 0.5
                    &.disabled
                        .terms
                            border-top 1px solid #eee
                            border-bottom @border-top
                            .title
                                font-size 24pt
                                line-height 1.4
                                margin 90px 0 0 0
            .app-area
                height 500px
                clearfix()
                background linear-gradient(left, rgba(black, 0.07), rgba(black, 0), rgba(black, 0.07))
                position relative
                margin 0
                .mobile
                    position absolute
                    width 303px
                    height 432px
                    background url(../images/mobile.png)
                    background-size cover
                    bottom 0
                    left 200px
                .note
                    position absolute
                    left 200px
                    color #888
                    bottom 40px
                .copy
                    position absolute
                    right 10%
                    top 80px
                    h4
                        font-size 26pt
                        margin 0 0 40px
                        line-height 1.2
                        font-weight 400
                    p
                        font-size 12pt
                        font-weight 200
                        line-height 1.3
                    a
                        margin 40px 0 10px 0
                        padding 15px 40px
                        border none

                        background lightblue
                        font-size 14pt
                        font-weight 400
                        color #fff
                        display inline-block
            .bottom-banner-container
                position relative
                height 340px
                background linear-gradient(left, rgba(black, 0.5), rgba(black, 0)), url(../images/bottom-banner-image.jpg)
                background-size cover
                margin 0 0 40px 0
                background-position center center
                .copy
                    position absolute
                    width 40%
                    left 10%
                    top 40px
                    h4
                        font-size 24pt
                        color #fff
                        margin 0 0 20px
                        line-height 1.2
                        font-weight 400
                        text-align left
                    p
                        font-size 16pt
                        color #fff
                        font-weight 200
                        line-height 1.3
                    form
                        margin 20px 0 0 0
                        input
                            padding 10px
                            font-size 10pt
                            width 300px
                            display block
                            margin 0 0 20px 0

                            border none
                        button
                            padding 15px 40px
                            border none

                            background lightblue
                            font-size 12pt
                            font-weight 400
                            color #fff
                            display block
